<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="afterteam.com.babymoment.detail.SleepActivity"
    android:background="#eeeeee">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/icon_sleep_green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sleep Detail"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:textColor="#909090" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_detail_inputlayout_bg"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:transitionGroup="false"
            android:background="@drawable/shape_detail_inputlayout_border"
            android:id="@+id/layout_sleepstart">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="수면 시작 시간"
                android:id="@+id/textView2"
                android:textColor="#939393"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="시간지정"
                android:id="@+id/tv_starttime"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:transitionGroup="false"
            android:background="@drawable/shape_detail_inputlayout_border"
            android:id="@+id/layout_sleepend">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="수면 종료 시간"
                android:id="@+id/textView3"
                android:textColor="#939393"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="시간지정"
                android:id="@+id/tv_endtime"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionGroup="false"
            android:weightSum="1"
            android:id="@+id/layout_sleepmemo"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="상세 메모"
                android:id="@+id/textView4"
                android:textColor="#939393"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editText"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#ccc"
                android:layout_gravity="top"
                android:gravity="top"
                android:textSize="14dp"
                android:background="#fff" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="입력 취소"
            android:id="@+id/btn_detail_cancel"
            android:layout_gravity="bottom"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:textColor="#2d4306"
            android:background="@drawable/shape_detail_button_sleep" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="저장하기"
            android:id="@+id/btn_detail_save"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_marginLeft="6dp"
            android:background="@drawable/shape_detail_button_sleep" />
    </LinearLayout>

</RelativeLayout>
